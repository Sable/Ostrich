#!/usr/bin/env python
import argparse
import sys
import os.path
import subprocess

parser = argparse.ArgumentParser(description='Return input data file path, creating the file if necessary.')
parser.add_argument('size', type=int, default=1024,
                   help='the size of the input')
parser.add_argument('seed', type=int, default=1337,
				   help='random number generator seed')

args = parser.parse_args()

__dir__ = os.path.dirname(os.path.realpath(__file__))
file_path = os.path.join(__dir__,  str(args.size) + ".csv")

if os.path.exists(file_path):
	sys.stdout.write(file_path + '\n')
	sys.stdout.close()
	sys.exit(0)

try:
	subprocess.check_call(
		[os.path.join(__dir__, "../utilities/data"), 
			str(args.size), 
			str(args.seed),
			"--saveinputfile",
			file_path
		], stdout=sys.stdout, stderr=sys.stderr)
	sys.stdout.write(file_path + '\n')
	sys.stdout.close()
	sys.exit(0)
except subprocess.CalledProcessError as e:
	sys.exit(e.returncode)


